<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="github.mik0war.deliveryapp.feature.category.presentation.CategoryListFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_category_list" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="github.mik0war.deliveryapp.presentation.dashboard.DashboardFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_cart"
        android:name="github.mik0war.deliveryapp.presentation.notifications.NotificationsFragment"
        android:label="@string/title_shopping_cart"
        tools:layout="@layout/fragment_notifications" />
</navigation>