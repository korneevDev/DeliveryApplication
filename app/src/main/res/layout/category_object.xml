<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/categoryListObject"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <github.mik0war.deliveryapp.entity.CustomTextView
        android:id="@+id/objectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:elevation="1dp"
        android:maxWidth="200dp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textSize="20sp"
        tools:text = "Пекарни и кондитерские"
        app:layout_constraintStart_toStartOf="@id/imageHolder"
        app:layout_constraintTop_toTopOf="@id/imageHolder" />

    <ImageView
        android:id="@+id/imageHolder"
        android:layout_width="match_parent"
        android:contentDescription="@string/descriptionCategoryImageView"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/default_missing_image"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>